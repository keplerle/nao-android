<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kinma.test_call_ws.activity.RegisterProfActivity">

    <Button
        android:id="@+id/ButtonCreer"
        android:layout_width="152dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/shape_button"
        android:onClick="Cree"
        android:text="Créer un profil"
        android:textAllCaps="false"
        android:textColor="@color/textColor"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EditTextVerifPassword" />

    <TextView
        android:id="@+id/TextNomProf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Nom :"
        android:textColor="@android:color/black"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/EditTextNomProf"
        app:layout_constraintEnd_toStartOf="@+id/EditTextNomProf"
        app:layout_constraintStart_toStartOf="@+id/TextViewVerifPassword"
        app:layout_constraintTop_toTopOf="@+id/EditTextNomProf" />

    <TextView
        android:id="@+id/TextPrenomProf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Prénom :"
        android:textColor="@android:color/black"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/EditTextPrenomProf"
        app:layout_constraintEnd_toStartOf="@+id/EditTextPrenomProf"
        app:layout_constraintStart_toStartOf="@+id/TextViewVerifPassword"
        app:layout_constraintTop_toTopOf="@+id/EditTextPrenomProf" />

    <TextView
        android:id="@+id/TextMailProf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Adresse Mail :"
        android:textColor="@android:color/black"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/EditTextMailProf"
        app:layout_constraintEnd_toStartOf="@+id/EditTextMailProf"
        app:layout_constraintStart_toStartOf="@+id/TextViewVerifPassword"
        app:layout_constraintTop_toTopOf="@+id/EditTextMailProf" />

    <TextView
        android:id="@+id/TextPasswordProf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Password :"
        android:textColor="@android:color/black"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/EditTextPasswordProf"
        app:layout_constraintEnd_toStartOf="@+id/EditTextPasswordProf"
        app:layout_constraintStart_toStartOf="@+id/TextViewVerifPassword"
        app:layout_constraintTop_toTopOf="@+id/EditTextPasswordProf" />

    <EditText
        android:id="@+id/EditTextPrenomProf"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/EditTextMailProf"
        app:layout_constraintTop_toBottomOf="@+id/EditTextNomProf" />

    <EditText
        android:id="@+id/EditTextMailProf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/EditTextPasswordProf"
        app:layout_constraintTop_toBottomOf="@+id/EditTextPrenomProf" />

    <EditText
        android:id="@+id/EditTextPasswordProf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/EditTextVerifPassword"
        app:layout_constraintTop_toBottomOf="@+id/EditTextMailProf" />

    <EditText
        android:id="@+id/EditTextNomProf"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/EditTextPrenomProf"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/EditTextVerifPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="@+id/ButtonCreer"
        app:layout_constraintTop_toBottomOf="@+id/EditTextPasswordProf" />

    <TextView
        android:id="@+id/TextViewVerifPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Retaper le Password :"
        android:textColor="@android:color/black"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/EditTextVerifPassword"
        app:layout_constraintEnd_toStartOf="@+id/EditTextVerifPassword"
        app:layout_constraintTop_toTopOf="@+id/EditTextVerifPassword" />

</android.support.constraint.ConstraintLayout>
