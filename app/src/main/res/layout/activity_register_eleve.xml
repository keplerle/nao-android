<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kinma.test_call_ws.activity.Eleve.RegisterEleveActivity">

    <Button
        android:id="@+id/ButtonCreeEleve"
        android:layout_width="156dp"
        android:layout_height="48dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="250dp"
        android:background="@drawable/shape_button"
        android:onClick="CreerEleve"
        android:text="Créer un élève"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/textColor"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/EditTextNomEleve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/EditTextPrenomEleve"
        app:layout_constraintStart_toStartOf="@+id/EditTextPrenomEleve" />

    <TextView
        android:id="@+id/TextNomEleve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:text="Nom de l'élève :"
        android:textColor="@android:color/black"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/EditTextNomEleve"
        app:layout_constraintEnd_toStartOf="@+id/EditTextNomEleve"
        app:layout_constraintTop_toTopOf="@+id/EditTextNomEleve" />

    <TextView
        android:id="@+id/TextPrenomEleve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:text="Prénom de l'élève :"
        android:textColor="@android:color/black"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/EditTextPrenomEleve"
        app:layout_constraintEnd_toStartOf="@+id/EditTextPrenomEleve"
        app:layout_constraintTop_toTopOf="@+id/EditTextPrenomEleve" />

    <TextView
        android:id="@+id/TextClasseEleve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:text="Classe de l'élève :"
        android:textColor="@android:color/black"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/EditTextClasseEleve"
        app:layout_constraintEnd_toStartOf="@+id/EditTextClasseEleve"
        app:layout_constraintTop_toTopOf="@+id/EditTextClasseEleve" />

    <EditText
        android:id="@+id/EditTextPrenomEleve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/EditTextClasseEleve"
        app:layout_constraintStart_toStartOf="@+id/EditTextClasseEleve" />

    <EditText
        android:id="@+id/EditTextClasseEleve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginStart="35dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/ButtonCreeEleve"
        app:layout_constraintStart_toStartOf="@+id/ButtonCreeEleve" />

</android.support.constraint.ConstraintLayout>
